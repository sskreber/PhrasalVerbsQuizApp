<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.quizapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_flag"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round_flag"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EasyActivity" />
        <activity android:name=".MediumActivity" />
        <activity android:name=".HardActivity"></activity>
    </application>

    <!-- The "United Kingdom" launcher icon was created by Freepik at www.flaticon.com.-->

</manifest>